{
  "name": "sudowrt-luci2-webclient",
  "version": "0.0.1",
  "main": "./server.js",
  "description": "Client side web admin interface for sudowrt",
  "homepage": "http://github.com/sudomesh/sudowrt-luci2-webclient",
  "author": {
    "name": "Marc Juul, Maxb",
    "email": "npm@juul.io, maxb@sudomesh.org"
  },
  "keywords": [
    "sudowrt",
    "openwrt",
    "luci2",
    "ubus",
    "admin"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/sudomesh/sudowrt-luci2-webclient.git"
  },
  "browser": {
    "jsonrpc": "./web-src/bower_components/jquery-jsonrpc/jquery.jsonrpc.js",
    "jquery-editable": "./web-src/bower_components/jquery_jeditable/js/jquery.jeditable.js"
  },
  "dependencies": {
    "async": "^0.9.0",
    "body-parser": "^1.11.0",
    "express": "^4.11.2",
    "extend": "^2.0.0",
    "findit": "^2.0.0",
    "glob": "^4.3.5",
    "line-by-line": "^0.1.3",
    "lodash": "^3.10.0",
    "node-express-json-rpc2": "git://github.com/sudomesh/node-express-json-rpc2"
  },
  "devDependencies": {
    "bower": "^1.4.1",
    "browserify": "^10.2.4",
    "browserify-shim": "^3.8.9",
    "imagemin": "^3.2.0",
    "imagemin-jpeg-recompress": "^4.3.0",
    "jquery": "^2.1.4",
    "less": "^2.5.1",
    "uglify-js": "^2.4.23",
    "uglifycss": "0.0.15",
    "watchify": "^3.2.3"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jsonrpc": {
      "depends": [
        "jquery:jQuery"
      ]
    },
    "jquery-editable": {
      "depends": [
        "jquery:jQuery"
      ]
    }
  },
  "scripts": {
    "build-dev-css": "lessc --include-path=./web-src/less/libs --source-map --source-map-less-inline web-src/less/admin-style.less ./web-build/css/bundle.css",
    "build-prod-css": "lessc --include-path=./web-src/less/libs -x web-src/less/admin-style.less ./web-build/css/bundle.min.css",
    "build-dev-js": "browserify ./web-src/js/main.js -d -o web-build/js/bundle.js",
    "build-prod-js": "browserify ./web-src/js/main.js | uglifyjs -mc > ./web-build/js/bundle.min.js",
    "build-dev": "npm run build-dev-css && npm run build-dev-js",
    "compress-images": "node build-scripts/compress-images.js",
    "watch-dev-js": "watchify ./web-src/js/main.js -d -o web-build/js/bundle.js",
    "postinstall": "cd ./web-src bower install",
    "bowerinstall": "cd ./web-src bower install"
  }
}
